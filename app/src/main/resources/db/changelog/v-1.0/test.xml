<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1628709932608-1" author="Wadikk">
        <createTable tableName="article">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_article"/>
            </column>
            <column name="product_id" type="BIGINT"/>
            <column name="store_id" type="BIGINT"/>
            <column name="price" type="DOUBLE"/>
            <column name="amount" type="INT"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="product_id" baseTableName="article" constraintName="FK_ARTICLE_ON_PRODUCT" referencedColumnNames="id" referencedTableName="products"/>
        <addForeignKeyConstraint baseColumnNames="store_id" baseTableName="article" constraintName="FK_ARTICLE_ON_STORE" referencedColumnNames="id" referencedTableName="store"/>
    </changeSet>
</databaseChangeLog>