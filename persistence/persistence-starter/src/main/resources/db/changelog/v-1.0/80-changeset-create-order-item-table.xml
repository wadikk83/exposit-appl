<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-order-item-table" author="wadikk">
        <createTable tableName="order_item">
            <column name="id" type="java.lang.Long" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="created" type="datetime"/>
            <column name="updated" type="datetime"/>
            <column name="article_id" type="java.lang.Long"/>
            <column name="order_id" type="java.lang.Long"/>
            <column name="amount" type="java.lang.Integer"/>
            <column name="product_price" type="java.lang.Double"/>
        </createTable>
    </changeSet>
</databaseChangeLog>