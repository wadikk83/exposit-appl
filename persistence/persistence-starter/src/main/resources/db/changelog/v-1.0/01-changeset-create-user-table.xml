<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="wadikk" id="create-user-table">
        <createTable tableName="users">
            <column name="id" type="java.lang.Long" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="created" type="datetime"/>
            <column name="updated" type="datetime"/>
            <column name="login" type="java.lang.String">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="java.lang.String">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="java.lang.String">
            </column>
            <column name="email" type="java.lang.String">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="address" type="java.lang.String"/>
        </createTable>
    </changeSet>
</databaseChangeLog>

