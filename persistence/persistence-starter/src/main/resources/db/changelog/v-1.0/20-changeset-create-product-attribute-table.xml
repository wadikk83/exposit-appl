<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="wadikk" id="create-product-attribute-table">
        <createTable tableName="product_attribute">
            <column name="id" type="java.lang.Long" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="created" type="datetime"/>
            <column name="updated" type="datetime"/>
            <column name="name" type="java.lang.String">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="value" type="java.lang.String"/>
            <column name="attribute_name_id" type="java.lang.Long"/>
            <column name="product_id" type="java.lang.Long"/>
        </createTable>
    </changeSet>
</databaseChangeLog>