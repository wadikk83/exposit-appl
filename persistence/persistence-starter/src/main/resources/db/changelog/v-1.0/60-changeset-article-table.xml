<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="wadikk" id="60">
        <createTable tableName="article">
            <column name="id" type="java.lang.Long" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="product_id" type="java.lang.Long">
                <constraints foreignKeyName="fk_article->product"
                             deleteCascade="true"
                             unique="true"
                             referencedTableName="products"
                             referencedColumnNames="id"/>
            </column>
            <column name="store_id" type="java.lang.Long">
                <constraints foreignKeyName="fk_article->store"
                             deleteCascade="true"
                             referencedTableName="store"
                             referencedColumnNames="id"/>
            </column>

            <column name="price" type="java.lang.Double"/>
            <column name="amount" type="integer"/>
        </createTable>
    </changeSet>
</databaseChangeLog>