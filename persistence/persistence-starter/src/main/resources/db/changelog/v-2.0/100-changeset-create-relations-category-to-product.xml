<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="wadikk" id="create-relations-category-to-product">
        <addForeignKeyConstraint baseTableName="product_category"
                                 baseColumnNames="prod_id"
                                 constraintName="product_category-prod_id->products-id"
                                 referencedTableName="products"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="product_category"
                                 baseColumnNames="cat_id"
                                 constraintName="product_category-prod_id->category-id"
                                 referencedTableName="category"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

    </changeSet>
</databaseChangeLog>